
{% extends '_layout.twig' %}

{% block title %}Management{% endblock %}

{% block main %}
 <main class="container ms-auto">   
    <div class="mx-0 my-4">
        <button type="button" class="btn btn-dark"> Nouvel Utilisateur
            <span class="fs-4 ms-auto"><i class="bi bi-person-add"></i></span>  
        </button>
    </div>
        <div class="row justify-content-center">
        {% for employee in employees %}
            <div class="card h-100 col-sm-12 col-lg-3 p-0 mx-1 mb-2">
                <div class="card-body fs-5">
                    <div class="card-title">Nom: {{ employee.em_firstname }}</div>
                    <div class="card-subtitle">Prénom: {{ employee.em_lastname }}</div>
                    <div class="card-text">Email: {{ employee.em_email }}</div>
                    <div class="card-text">Password : {{ employee.em_password }}</div>
                    <div class="card-text">Role: {{ employee.ro_id }}</div>
                    <div class="card-text">créé le: {{ employee.em_createAt }}</div>
                </div>
                <div class="card-footer d-flex justify-content-between ">
                    <div class="fs-2"><a href="/management/delete"><i class="bi bi-trash3"></i></a></div>
                    <div class="fs-2"><a href="/management/update"><i class="bi bi-pencil-square"></i></a></div>
                </div>
            </div>
        {% endfor %}
        </div>
</main>
    
{% endblock main %}

